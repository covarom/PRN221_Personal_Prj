            @Html.DisplayFor(model => model.Student.IsDeleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Major)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Major.Name)
        </dd>
